btn_x=5


function _init()
  --game
  game={
    update=menu_update,
    draw=menu_draw,
  }
  
  --player
  p={
    --sprite
    sp=1,
    --sprite x position
    x=64,
    --sprite y position
    y=64,
    --flip sprit horizontal
    flp=false,
    --sprite width/height in pixel
    w=8,
    h=8,
    --player x speed
    dx=0,
    max_dx=1,
    acc_x=0.25,
    --player y speed
    dy=0,
    max_dy=1.5,
    acc_y=2,
    --animation timing
    anim=0,
    --player states
    --idle, running, jumping, falling
    state="idle",
  }
  
  gravity=0.15
  friction=0.425
  
end

function _update60()
  game.update()
end

function _draw()
  game.draw()
end
